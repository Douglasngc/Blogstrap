
      <article class="blog-post">
        <h2 class="blog-post-title"><%= @article.title %></h2>
        <p class="blog-post-meta"><%= data( @article.created_at) %></p>


<%= link_to 'Edit', edit_article_path(@article), class:"btn btn-secondary" %>
<%= button_to 'Destroy', article_path(@article), class:"btn btn-danger", method: :delete, data: { confirm: 'Tem certeza?' } %>
<%= link_to 'Voltar', root_path, class:"btn btn-light" %>
      </article>
